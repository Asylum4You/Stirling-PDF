modules = ["java-graalvm22.3", "web"]
run = "java -jar ./opt/Stirling-PDF/Stirling-PDF.jar"

[nix]
channel = "stable-25_05"
packages = ["fontconfig", "ghostscript", "glib", "harfbuzz", "jbig2enc", "libGL", "libGLU", "libreoffice", "pango", "pngquant", "poppler-utils", "postgresql", "qpdf", "runtimeShellPackage", "tesseract", "unpaper", "vim-full", "wget"]

[[ports]]
localPort = 8080
externalPort = 8080

[deployment]
deploymentTarget = "autoscale"
run = ["java", "-Dfile.encoding=UTF-8", "-Dserver.port=8080", "-Djava.io.tmpdir=/tmp/stirling-pdf", "-jar", "app/core/build/libs/stirling-pdf-1.2.0.jar"]
build = ["./gradlew", "clean", "build", "-x", "test"]

[agent]
expertMode = true

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Spring Boot Server"

[[workflows.workflow]]
name = "Spring Boot Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "./gradlew bootRun"
waitForPort = 8080

[workflows.workflow.metadata]
outputType = "console"
