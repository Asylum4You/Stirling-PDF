modules = ["java-graalvm22.3", "web"]
run = "java -jar ./opt/Stirling-PDF/Stirling-PDF.jar"

[nix]
channel = "stable-25_05"
packages = ["fontconfig", "ghostscript", "glib", "harfbuzz", "jbig2enc", "libGL", "libGLU", "libreoffice", "pango", "pngquant", "poppler-utils", "postgresql", "qpdf", "runtimeShellPackage", "tesseract", "unpaper", "vim-full", "wget"]

[[ports]]
localPort = 8080
externalPort = 8080

[[ports]]
localPort = 35729
externalPort = 80

[deployment]
deploymentTarget = "autoscale"
run = ["java", "-Dserver.port=5000", "-jar", "app/core/build/libs/Stirling-PDF-1.2.0.jar"]
build = ["./gradlew", "build"]

[agent]
expertMode = true

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Spring Boot Server"

[[workflows.workflow]]
name = "Spring Boot Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "./gradlew bootRun"
waitForPort = 8080

[workflows.workflow.metadata]
outputType = "console"
