args = 'docker run -d \   --name stirling-pdf \   -p 8080:8080 \   -v "./StirlingPDF/trainingData:/usr/share/tessdata" \   -v "./StirlingPDF/extraConfigs:/configs" \   -v "./StirlingPDF/customFiles:/customFiles/" \   -v "./StirlingPDF/logs:/logs/" \   -v "./StirlingPDF/pipeline:/pipeline/" \   -e DISABLE_ADDITIONAL_FEATURES=true \   -e LANGS=en_GB \   docker.stirlingpdf.com/stirlingtools/stirling-pdf:latest'
