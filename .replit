modules = ["java-graalvm22.3", "web", "nodejs-20", "angular-node-24"]
run = "java -jar ./opt/Stirling-PDF/Stirling-PDF.jar"

[nix]
channel = "stable-25_05"
packages = ["wget", "runtimeShellPackage", "vim-full", "postgresql"]

[[ports]]
localPort = 5000
externalPort = 80

[deployment]
deploymentTarget = "autoscale"
run = ["java", "-Dserver.port=${PORT:-5000}", "-Dserver.address=0.0.0.0", "-jar", "app/core/build/libs/stirling-pdf-1.2.0.jar"]
build = ["./gradlew", "clean", "build", "-x", "test"]

[agent]
expertMode = true

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Spring Boot Server"

[[workflows.workflow]]
name = "Spring Boot Server"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "./gradlew bootRun"
waitForPort = 5000
